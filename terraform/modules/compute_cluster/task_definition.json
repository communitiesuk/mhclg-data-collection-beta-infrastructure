[
  {
    "essential": true,
    "memory": 254,
    "name": "app",
    "cpu": 1,
    "image": "${REPOSITORY_URL}:latest",
    "environment": [
      {
        "name": "DB_HOST",
        "value": "${DB_HOST}"
      },
      {
        "name": "DB_DATABASE",
        "value": "${DB_DATABASE}"
      },
      {
        "name": "DB_USERNAME",
        "value": "${DB_USERNAME}"
      },
      {
        "name": "DB_PASSWORD",
        "value": "${DB_PASSWORD}"
      },
      {
        "name": "RAILS_ENV",
        "value": "${RAILS_ENV}"
      },
      {
        "name": "RAILS_MASTER_KEY",
        "value": "${RAILS_MASTER_KEY}"
      },
      {
        "name": "RAILS_SERVE_STATIC_FILES",
        "value": "${RAILS_SERVE_STATIC_FILES}"
      },
      {
        "name": "RAILS_LOG_TO_STDOUT",
        "value": "${RAILS_LOG_TO_STDOUT}"
      }
    ],
    "portMappings": [
      {
        "containerPort": 8080,
        "hostPort": 0,
        "protocol": "tcp"
      }
    ]
  }
]
